<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/section_genres_icon"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_dice_5_grey"/>

    <TextView
        android:id="@+id/section_genres_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/section_genres_icon"
        android:layout_alignTop="@id/section_genres_icon"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="1dp"
        android:text="@string/genres"
        android:textColor="@color/colorTextInverse"
        android:textSize="19sp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/section_genres_flexbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/section_genres_header"
        android:layout_alignLeft="@id/section_genres_header"
        app:flexWrap="wrap"/>

</RelativeLayout>