<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_explore_set_container"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/main_explore_set_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <View
            android:id="@+id/main_explore_set_background_tint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="#000000"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/main_explore_set_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/explore_set_view_default_title"
            android:textSize="25sp"
            android:textColor="@color/colorTextPrimaryDark"/>

        <Button
            android:id="@+id/main_explore_set_all_btn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/main_explore_set_header"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_explore_set_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_explore_set_header"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:clipToPadding="false"/>

    </RelativeLayout>

</merge>