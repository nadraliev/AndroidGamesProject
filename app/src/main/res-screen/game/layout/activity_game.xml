<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/game_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <com.soutvoid.gamesproject.ui.base.widgets.FixedAspectRatioFrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_collapseMode="parallax"
                app:ratio="1.778">

                <ImageView
                    android:id="@+id/game_image_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>

            </com.soutvoid.gamesproject.ui.base.widgets.FixedAspectRatioFrameLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:id="@+id/game_app_bar_title_placeholder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/colorBackground">


            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorTextInverse"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/game_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/game_title"
                android:layout_below="@id/game_title"
                android:layout_marginTop="5dp"/>

            <View
                android:id="@+id/game_year_status_separator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle"
                android:layout_below="@id/game_title"
                android:layout_toRightOf="@id/game_year"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/game_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/game_year"
                android:layout_toRightOf="@id/game_year_status_separator"/>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@id/game_app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123456789"/>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/game_cover"
        android:layout_width="100dp"
        android:layout_height="142dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_backdrop"
        android:scaleType="centerCrop"
        app:endY="20dp"
        app:layout_anchor="@id/game_app_bar_title_placeholder"
        app:layout_behavior="com.soutvoid.gamesproject.ui.screen.game.behaviors.FadingViewBehavior"
        app:startY="10dp"/>

</android.support.design.widget.CoordinatorLayout>