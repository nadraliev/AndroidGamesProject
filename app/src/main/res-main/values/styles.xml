<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.StatusBarTranslucent" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="GrayUnderline">
        <item name="colorControlNormal">@color/black_transparent_40</item>
        <item name="colorControlActivated">@color/black_transparent_40</item>
        <item name="colorControlHighlight">@color/black_transparent_40</item>
    </style>

    <style name="NoUnderline">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">@color/colorTransparent</item>
        <item name="colorControlHighlight">@color/colorTransparent</item>
    </style>
</resources>
