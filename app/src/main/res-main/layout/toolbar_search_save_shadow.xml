<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.soutvoid.gamesproject.ui.base.widgets.IgdbToolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/toolbar_search_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="25dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="text"
            android:hint="@string/search_in_igdb"
            android:textColorHint="@color/black_transparent_40"
            android:textCursorDrawable="@null"
            android:theme="@style/GrayUnderline"/>

        <EditText
            android:id="@+id/toolbar_input_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="25dp"
            android:inputType="text"
            android:hint="@string/enter_name"
            android:textColorHint="@color/white_transparent_40"
            android:textCursorDrawable="@null"
            android:theme="@style/NoUnderline"/>

        <Button
            android:id="@+id/toolbar_save_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:background="@drawable/ic_check_white_24dp"/>

    </com.soutvoid.gamesproject.ui.base.widgets.IgdbToolbar>

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/background_shadow"/>
</LinearLayout>